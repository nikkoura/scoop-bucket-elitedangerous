    },
    "installer": {
        "script": "Copy-Item -Path \"$dir\\ArtemisScannerTracker-$version\" -Destination \"$env:LocalAppData\\EDMarketConnector\\plugins\\ArtemisScannerTracker\" -Recurse -Force -ErrorAction SilentlyContinue"
